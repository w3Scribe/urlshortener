{
  "name": "urlshortener",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "npm-run-all --parallel watch:*",
    "watch:server": "tsnd --cls --respawn server.ts",
    "watch:css": "npx tailwindcss -i ./src/views/input.css -o ./src/views/output.css --watch",
    "start": "node dist/server.js",
    "clean": "rimraf ./dist/",
    "copy": "copyfiles -u 1 ./src/**/*.{ejs,js} ./dist/src",
    "build": "npm run clean && tsc && npm run copy && npm run build:css",
    "build:css": "npx tailwindcss -i ./src/views/input.css -o ./dist/src/views/output.css"
  },
  "author": "Sudhir Gadpayle <sudhirgadpayle535@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "short-unique-id": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.12.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.13.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  }
}
